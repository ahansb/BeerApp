@model BeerApp.Web.ViewModels.Places.PlacesResponseViewModel

@{
    ViewBag.Title = "All";
}

<h2>All Places, Page @Model.CurrentPage</h2>
<div class="row">
    <div class="col-md-6">
        <h5><a href="~/Place/Add" class="btn btn-success">Add new PLACE!</a></h5>
    </div>
</div>

@foreach (var place in @Model.Places)
{
    @Html.Partial("_PlacePartial", place)
}

<div class="row">
    <div class="text-center">
        <nav>
            <ul class="pagination">
                @if (Model.CurrentPage > 1)
            {
                    <li>
                        <a href="/Places/All/@Model.EncodePage(Model.CurrentPage-1)" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                }

                @for (int i = 1; i <= Model.TotalPages; i++)
            {
                var className = string.Empty;
                if (Model.CurrentPage == i)
                {
                    className = "active";
                }
                <li class="@className"><a href="/Places/All/@Model.EncodePage(i)">@i</a></li>

                }
                @if (Model.CurrentPage < Model.TotalPages)
            {
                    <li>
                        <a href="/Places/All/@Model.EncodePage(Model.CurrentPage+1)" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                }

            </ul>
        </nav>

    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <h5><a href="~/Place/All" class="btn btn-default">See all places</a></h5>
    </div>
</div>
