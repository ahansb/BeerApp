@model BeerApp.Web.ViewModels.BeerType.BeerTypeResponseViewModel

@{
    ViewBag.Title = "Details";
}

<h2><a href="~/BeerType/Details/@Model.Url">@Model.Name</a></h2>

<div class="row">
    @foreach (var recipe in Model.Recipes)
    {
        <div class="col-md-4">
            <h4>Recipe <a href="~/Recipe/@recipe.Url">@recipe.Title</a>, by @recipe.CreatorName</h4>
            <p>@(recipe.Content.Length > 201 ? recipe.Content.Substring(0, 200) + "..." : recipe.Content);</p>
        </div>
    }
</div>

<div class="row">
    @foreach (var beer in Model.Beers)
    {
        <div class="col-md-4">
            <h4><strong><a href="~/Beer/Details/@beer.Url">@beer.Name</a></strong>, @beer.Country</h4>
            <h6><em>Produced since @beer.ProducedSince</em></h6>
            <p>@(beer.Description.Length > 201 ? beer.Description.Substring(0, 200) + "..." : beer.Description);</p>
        </div>
    }
</div>
