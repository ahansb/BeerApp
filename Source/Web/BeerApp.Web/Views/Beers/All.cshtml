@model BeerApp.Web.ViewModels.Beers.BeersResponseViewModel

@{
    ViewBag.Title = "All";
}

<h2>All Beers, Page @Model.CurrentPage</h2>

@foreach (var beer in @Model.Beers)
{
    <div class="row">
        <div class="col-md-2">
            <img src="" alt="beer-logo" />
        </div>
        <div class="col-md-2">
            <h3><a href="~/Beer/Details/@beer.Url">@beer.Name</a></h3>
            <h4>
                <strong><a href="~/BeerType/Details/@beer.Type.Url">@beer.Type.Name</a></strong><br />
                <strong><a href="~/Country/Details/@beer.Country.Url">@beer.Country.Name</a></strong><br />
                @if (beer.ProducedSince != null)
                {
                    <em>In production since @beer.ProducedSince</em><br />
                }
                <strong>Alcohol Containing: @beer.AlcoholContaining</strong><br />
            </h4>
        </div>
        <div class="col-md-8">
            <p>
                @beer.Description
            </p>
        </div>
    </div>
}
<nav>
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li>
                <a href="/Beers/All/@Model.EncodePage(Model.CurrentPage-1)" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            var className = string.Empty;
            if (Model.CurrentPage == i)
            {
                className = "active";
            }
            <li class="@className"><a href="/Beers/All/@Model.EncodePage(i)">@i</a></li>

        }
        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li>
                <a href="/Beers/All/@Model.EncodePage(Model.CurrentPage+1)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        }

    </ul>
</nav>
